<div id="topbar" class="topbar">
    <div class="menu-items">
        <div id="btnSearch" class="search"><span class="icon-search"></span></div>
        <div id="title" class="title"><a href="{{ tqd.site_url }}">topquote.nl</a></div>
        <div class="menu">
            <a class="btn add icon-add" href="/add"></a>
            <input type="checkbox" class="menu-cb" id="menucb">
            <label for="menucb">
                <div class="menu-panel">
                    <ul>
                        <li><a href="{{ tqd.site_url }}/quotes"><span class="icon-clock"></span>Nieuwste</a></li>
                        <li><a href="{{ tqd.site_url }}/quotes?ob=likes"><span class="icon-heart1"></span>Meeste&nbsp;likes</a></li>
                        <li><a href="{{ tqd.site_url }}/add" class="btn"><span class="icon-plus"></span>Toevoegen</a></li>
                        {# <li><a href="{{ tqd.site_url }}/add-group" class="btn btn-smaller"><span class="icon-plus"></span>Priv√©groep maken</a></li> #}
                        {% if tqd.ses_loggedin %}
                        {# <li><a href="{{ tqd.site_url }}/logout" class="smaller">Loguit van  '{{ tqd.ses_grp_name }}'</a></li> #}
                        {% endif %}
                    </ul>
                    <ul class="row">
                        <li><a href="{{ tqd.site_url }}/feedback"><span class="icon-pen"></span>Mail ons</a></li>
                        <li><a href="http://eepurl.com/hm_WEr" target="_blank" rel="noopener"><span class="icon-mail"></span>Mailinglijst</a></li>
                    </ul>
                    <ul>
                        <li class="clrs">
                            {% for i in 0..6 %}
                            <div class="clr c-{{ i }}{% if i == 0 %} active{% endif %}" data-c="{{ i }}"></div>
                            {% endfor %}
                        </li>
                    </ul>
                </div>
                <div class="spinner-container">
                    <span class="icon-ellipsis"></span>
                </div>
            </label>
        </div>
    </div>
</div>