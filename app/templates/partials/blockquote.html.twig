<blockquote>
    <div class="sayer">
        <a href="{{ quote.sayerLink }}" title="Alle uitspraken gezegd door {{ quote.sayer }}">{{ quote.sayer }}</a>
    </div>
    <div class="quote">
        {% if not is_single_quote %}<a href="{{ quote.link }}">
        {% else %}<h1>{% endif %}
        {{ quote.quote }}
        {% if not is_single_quote %}</a>
        {% else %}</h1>{% endif %}
    </div>
    <div class="meta">
        <div class="nowrap"><span class="icon-clock"></span> {{ quote.ago }}</div>
        <div class="nowrap"><span class="icon-pencil"></span> <a href="{{ quote.submitterLink }}" title="Alle uitspraken opgeslagen door {{ quote.submitter }}">{{ quote.submitter }}</a></div>
        <div class="like-container nowrap">
            <span class="nowrap"><span class="icon-heart1 quote-btn-like" data-id="{{ quote.id }}"></span> <span id="q{{ quote.id }}-likes">{{ quote.likes }}</span></span>
            <div id="q{{ quote.id }}-anim" class="anim">
                <span class="heart"><span class="icon icon-heart1"></span></span>
                <span class="heart"><span class="icon icon-heart1"></span></span>
                <span class="heart"><span class="icon icon-heart1"></span></span>
            </div>
        </div>

        <span class="nowrap"><span data-url="{{ quote.link }}" class="icon-share quote-btn-share"></span></span>
        <span class="nowrap"><span class="icon-price-tags"></span>{{ quote.tagsLinks|raw }}</span>
        {% if quote.isprivate == 1 %}
        <span class="nowrap"><span class="icon2-lock"></span><a href="{{ quote.groupurl }}">{{ tqd.ses_grp_name }}</a></span>
        {% endif %}
        <a href="{{constant('SERVICE_URL')}}/img/{{ quote.id }}" target="_blank" rel="noopener" class="icon-photo" title="Wallpaper van deze quote"></a>
        <a href="{{constant('SERVICE_URL')}}/poster/{{ quote.id }}" target="_blank" rel="noopener" class="icon-file-text" title="Poster van deze quote"></a>
    </div>
</blockquote>
