#!/bin/bash

set -e

docker build --no-cache --platform linux/amd64 --tag registry.mmsrv.nl/topquote-php:latest ./app \
&& docker push registry.mmsrv.nl/topquote-php:latest

docker build --no-cache --platform linux/amd64 --tag registry.mmsrv.nl/topquote-nginx:latest ./nginx \
&& docker push registry.mmsrv.nl/topquote-nginx:latest