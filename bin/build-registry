#!/bin/bash

set -e

docker build -t registry.mmsrv.nl/topquote-php:latest \
  --no-cache \
  --platform linux/amd64 \
  ./app \
&& docker push registry.mmsrv.nl/topquote-php:latest

docker build -t registry.mmsrv.nl/topquote-nginx:latest \
  --no-cache \
  --platform linux/amd64 \
  ./nginx \
&& docker push registry.mmsrv.nl/topquote-nginx:latest